private void updateUIWithExitCode(int exitCode) {
    // Update your program's UI with the exit code
    // For example, display the exit code in a label or perform specific actions based on the code
    System.out.println("Python process exited with code: " + exitCode);
    // Display exitCode in your program's panel or UI
    if (exitCode == 0) {
        updateUIWithSuccessMessage("Python script executed successfully");
    } else {
        updateUIWithError("Python script exited with code: " + exitCode);
    }
}


